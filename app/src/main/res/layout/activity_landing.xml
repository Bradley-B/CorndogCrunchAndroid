<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bradleyboxer.corndogcrunch.LandingActivity">

    <Button
        android:id="@+id/buttonSingleplayer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="27dp"
        android:onClick="onSinglePlayerButton"
        android:text="Play Singleplayer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMultiplayer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="27dp"
        android:onClick="onScoreboardButton"
        android:text="View Singleplayer Scoreboard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSingleplayer" />

    <Button
        android:id="@+id/buttonScoreboard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="27dp"
        android:text="Play Multiplayer \n (Coming Soon!)"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiplayer" />
</android.support.constraint.ConstraintLayout>
